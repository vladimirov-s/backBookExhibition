  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.1",
    "mongoose": "^7.0.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^3.0.1"
  }, 
   "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "+=": "before"
          }
        }
      ],
      "no-console": 0,
      "linebreak-style": [
        "error",
        "windows"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": 0,
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ]
    }
  }
}
